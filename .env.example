# =========================
# Django
# =========================
DJANGO_SECRET_KEY=이거바꿔야됨
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF 신뢰 도메인 (HTTPS/도메인 붙일 때 필요)
DJANGO_CSRF_TRUSTED_ORIGINS= http://localhost:8000
# 타임존
DJANGO_TIME_ZONE=Asia/Seoul


# =========================
# Database (PostgreSQL)
# =========================
